<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_terlewati"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/iv_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/sudah_terlewati"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_belum_terlewati"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_circle_orange"
                    android:padding="5dp"
                    android:src="@drawable/ic_pending" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/belum_terlewati"
                    android:textColor="@color/warning_orange"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_smiley"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/ic_smiley" />

            <TextView
                android:id="@+id/tv_holder_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_smiley"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv_smiley"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="@string/nama_pasien"
                android:textColor="@color/dark_grey" />

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_holder_nama"
                android:layout_alignStart="@id/tv_holder_nama"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:textSize="16sp"
                tools:text="Audy Fitri Ariani" />

            <ImageView
                android:id="@+id/iv_shot"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@id/iv_smiley"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@id/tv_holder_jenis"
                android:src="@drawable/ic_shot" />

            <TextView
                android:id="@+id/tv_holder_jenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jenis_imunisasi"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="35dp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/iv_shot"/>

            <TextView
                android:id="@+id/tv_jenis_imunisasi"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                tools:text="Polio"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="16sp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:layout_below="@id/tv_holder_jenis"
                android:layout_alignStart="@id/tv_holder_jenis"/>

            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignStart="@id/iv_smiley"
                android:layout_below="@id/tv_nama"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_calendar_black" />

            <TextView
                android:id="@+id/tv_holder_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tanggal_imunisasi"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv_calendar"
                android:layout_alignTop="@id/iv_calendar"/>

            <TextView
                android:id="@+id/tv_tanggal_imunisasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15 Januari 2022"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="16sp"
                android:maxLength="15"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:layout_below="@id/tv_holder_tanggal"
                android:layout_alignStart="@id/tv_holder_tanggal"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>