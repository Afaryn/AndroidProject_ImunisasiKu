<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.profile.UserProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_blue"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profil"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/sample_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_profile"
        app:layout_constraintBottom_toBottomOf="@id/guideline_profile"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_take_picture"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:baselineAlignBottom="true"
        android:src="@drawable/ic_take_photo"
        android:layout_marginEnd="5dp"
        app:layout_constraintBaseline_toBottomOf="@id/iv_profil"
        app:layout_constraintEnd_toEndOf="@+id/iv_profil"
        tools:layout_editor_absoluteY="165dp" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="@id/iv_profil"
        app:layout_constraintEnd_toEndOf="@id/iv_profil"
        app:layout_constraintTop_toBottomOf="@id/iv_profil"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/white"
        android:fontFamily="@font/pregular"
        app:layout_constraintStart_toStartOf="@id/iv_profil"
        app:layout_constraintEnd_toEndOf="@id/iv_profil"
        app:layout_constraintTop_toBottomOf="@id/tv_username"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:id="@+id/layout_edit_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_circle_grey"
                    android:src="@drawable/ic_edit"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_arrow_right"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:id="@+id/layout_riwayat_imunisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_circle_grey"
                    android:src="@drawable/ic_history"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/riwayat_imunisasi"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_arrow_right"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:id="@+id/layout_syarat_ketentuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_circle_grey"
                    android:src="@drawable/ic_document"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/syarat_ketentuan"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_arrow_right"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:id="@+id/layout_bantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_circle_grey"
                    android:src="@drawable/ic_help"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bantuan"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_arrow_right"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>